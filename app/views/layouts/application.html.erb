<!DOCTYPE html>
<html>
<head>
  <title>Travel</title>
  <%= csrf_meta_tags %>
  <link href="https://fonts.googleapis.com/css?family=Port+Lligat+Slab|Sofia" rel="stylesheet">
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
</head>

<body>
  <div class="userNav">
    <% if @current_user %>
      <%= link_to "Hey, #{@current_user.username}!", user_path(@current_user) %> |
      <%= link_to "Sign Out", session_path, method: :delete %>
    <% end %>
  </div>
  <%= yield %>
</body>
</html>
